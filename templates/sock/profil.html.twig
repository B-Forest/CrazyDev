{% extends 'base.html.twig' %}

{% block title %}Profil de {{sock.username}} {% endblock %}

{% block body %}
<div class='flex flex-wrap justify-center align-center ' id='Profil'>
    <div class='border-solid border-2 border-sky-500 rounded w-10/12 bg-{{sock.color.twclass}}-200' id='color'>
        <div class='text-center inset-x-0 top-0 h-16'>
            <h1 class='text-2xl'> {{sock.username}} </h1>
        </div>
        <div class='flex justify-evenly' id='content'>
            <div id='sockStyle' class='border-solid border-2 border-sky-500 rounded h-[25rem]'>
                <img src='{{forme}}' class=''>
            </div>

            <div id='story' class='border-solid border-2 border-sky-500 rounded w-5/12 overflow-y-scroll h-[25rem]'>
                <div class='text-center'>
                    <h2>L'Histoire de {{sock.username}}</h2>
                </div>
                
                <p class='text-clip overflow-hidden   '>{{sock.story}}
                </p>
            </div>
        </div>
        <div class='text-center inset-x-0 bottom-0 h-16 flex justify-center pt-4 pb-4'>
            <button class='bottom-auto border-solid border-2 border-sky-500 rounded' type="button">MATCH</button>
        </div>
    </div>
</div>

{% endblock %}